<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<h2>Account Update</h2>
<form class="update-account" action="/account/update/" method="post">
    <label for="account_firstname">First Name:</label>
    <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.userName %>">
    
    <label for="account_lastname">Last Name:</label>
    <input type="text" name="account_lastname" id="account_lastname" required value="<%= locals.userLast %>">
    
    <label for="account_email">Email:</label>
    <input type="email" name="account_email" id="account_email" required value="<%= locals.userEmail %>">
    
    <input type="hidden" name="account_id" value="<%= locals.userId %>">
    
    <button type="submit">Update Account</button>
</form>

<h2>Change Password</h2>
<form class="change-password" action="/account/change-password" method="post">
    <label for="account_password">New Password:</label>
    <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    
    <div class="password-requirements">
        <p>Password must be at least 12 characters long, contain at least:</p>
        <ul>
            <li>1 capital letter</li>
            <li>1 number</li>
            <li>1 special character</li>
        </ul>
    </div>

    <input type="hidden" name="account_id" value="<%= locals.userId %>">

    <button type="submit">Change Password</button>
</form>
