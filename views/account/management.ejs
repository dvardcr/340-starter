<h1><%= title %></h1>

<%- messages() %>

<p>You're logged in.</p>

<h2>Welcome <%= locals.userName %>!</h2>

<!-- Edit your account information link (visible to all users) -->
<a href="/account/update/<%= locals.userId %>">Edit your account information</a>

<!-- Inventory Management (visible to Employee/Admin only) -->
<% if (locals.userType === 'Employee' || locals.userType === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Manage Inventory</a></p>
<% } %>